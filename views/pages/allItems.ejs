<!DOCTYPE html> 
<html> 
<head> 
    <title>All Products Page</title> 
    <link rel="stylesheet" href="/css/main.css">
    </head>
    <body>
        <header>
            <%- include('../partials/navpartial') %>
        </header>

<% products.forEach(function(product, index) { %>
    <div class="product">
        <h3>Price: $<%= product.price %></h3>
        <h3> Name: <a href="/products?productId= <%= product.productid %> "><%= product.name %></a></h3>
        <h3> Description: <%= product.description %></h3>
        <img src="/images/<%=images[index*3].filename%>" alt="<%=images[index*3].altdescription%>" width="225" height="225">
      

    </div>

    <br>
    <br>
<% }); %>
<footer>
    <%- include('../partials/footerPartial') %>
</footer>

</body>